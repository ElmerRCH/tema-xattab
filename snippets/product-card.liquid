<a href="{{ product.url }}" 
   class="flex flex-col w-72 h-[450px] bg-white border border-gray-300 hover:border-[var(--brand-color)] 
          rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 
          hover:shadow-md transition-shadow duration-200">

  <!-- Imagen del producto -->
  <div class="h-[60%] w-full bg-white flex items-center justify-center overflow-hidden rounded-lg">
    <img 
      width="100"
      height="100"
      class="w-full h-full object-contain p-2"
      src="{{ product.featured_image | image_url: width: 600 }}"
      alt="{{ product.title | escape }}" 
      loading="lazy">
  </div>

  <!-- InformaciÃ³n del producto -->
  <div class="flex flex-col px-5 pb-5 flex-grow">
    <h5 class="text-lg font-semibold tracking-tight text-gray-900  line-clamp-2">
      {{ product.title }} 
    </h5>
    <div class="flex flex-row  w-full">
        <p class="text-sm  text-gray-500 mt-1">{{ product.vendor }}</p>
        {% render 'icon-verify'%}
    </div>
    
    <div class="flex flex-col items-start">
      <span class="text-xl font-bold color-text-brand mt-2">
          {{ product.price | money }}
      </span>
      <div >
        {% if product.available %}

          {% render 'add-product-to-car', product: product %}

        {% else %}
          {% render 'message-no-stock' %}
        {% endif %} 

      </div>
       
    </div>
  </div>
</a>
