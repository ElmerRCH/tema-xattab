<a href="{{ product.url }}" class="flex-none w-72 m-auto bg-white border border-gray-300 hover:border-[var(--brand-color)] rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 hover:shadow-md transition-shadow duration-200">
  
  <!-- Imagen del producto -->
  {% if product.featured_image %}
    <img 
      class="p-4 rounded-t-lg object-contain h-48 w-full"
      src="{{ product.featured_image | image_url: width: 400 }}"
      alt="{{ product.title | escape }}" 
      loading="lazy">
  {% else %}
    <div class="p-4 h-48 flex items-center justify-center bg-gray-100 text-gray-400">
      Imagen no disponible
    </div>
  {% endif %}

  <!-- InformaciÃ³n del producto -->
  <div class="px-5 pb-5">
    <h5 class="text-lg font-semibold tracking-tight text-gray-900 dark:text-white">
      {{ product.title }}
    </h5>

    <div class="flex items-center justify-between mt-2">
      <span class="text-xl font-bold color-text-brand dark:text-white">
        {{ product.price | money }}
      </span>
    </div>
  </div>
</a>
