<header class="fixed top-0 z-50 left-0 w-full border-b border-gray-200 shadow-bottom  site-header">
  <div class="bg-brand-color text-white text-center ">
    {% render 'email-announcement' %}
  </div>
 
  <nav class="bg-white border-gray-200">
    <div class="max-w-screen-xl flex flex-wrap items-center  mx-auto p-4 ">
      <!--Logo desktop -->
      <a href="{{ routes.root_url }}" class="hidden sm:flex items-center m-auto sm:m-0 rtl:space-x-reverse ">
        {% if settings.logo != blank %}
          <img src="{{ settings.logo | image_url: width: 300 }}" class="h-24 w-24" alt="{{ shop.name }} "width="300" height="300" />
        {% else %}
            <span class="self-center text-2xl font-semibold whitespace-nowrap"> {{ shop.name }}</span>
        {% endif %}
      </a>
      
      
      <div class="flex justify-center items-center w-full md:order-1 md:w-1/2  ">
        
        <!--Logo movil -->
        <a href="{{ routes.root_url }}" class="flex sm:hidden items-center m-auto sm:m-0 rtl:space-x-reverse w-18">
          {% if settings.logo != blank %}
            <img src="{{ settings.logo_movil | image_url: width: 300 }}" class="w-24 h-full object-cover"  alt="{{ shop.name }} "width="300" height="300" />
          {% else %}
              <span class="self-center text-2xl font-semibold whitespace-nowrap"> {{ shop.name }}</span>
          {% endif %}
        </a>
            
        <!-- Formulario de búsqueda visible en desktop -->
        <form id="predictive-search-form" action="{{ routes.search_url }}" method="get" role="search" class="relative  md:block w-full">
          <label for="search-navbar" class="sr-only">Buscar productos</label>
          <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
            <svg
              class="w-4 h-4 text-gray-500"
              aria-hidden="true"
              fill="none"
              viewBox="0 0 20 20"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
              />
            </svg>
            <span class="sr-only">Icono de búsqueda</span>
          </div>
          <input
            id="predictive-search-input"
            type="search"
            name="q"
            autocomplete="off"
            placeholder="Busca tus productos"
            class="border-none focus:ring-[var(--brand-color)] border-search-brand block w-full p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50"
          />
          
          <div id="predictive-search-results"
            class="absolute z-50 w-full mt-2 bg-white border border-gray-200 rounded-lg shadow-lg hidden"
          ></div>

        </form>
        
        <!-- Botón del menú en móvil -->
        <button data-collapse-toggle="navbar-search" type="button" class="inline-flex items-center ml-1 p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="navbar-search" aria-expanded="false">
          <span class="sr-only">Abrir menú principal</span>
          <svg
            class="w-5 h-5"
            aria-hidden="true"
            fill="none"
            viewBox="0 0 17 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 1h15M1 7h15M1 13h15"
            />
          </svg>
        </button>

        <!--Logo car movil -->
        <a href="{{ routes.cart_url }}" class="relative sm:hidden ml-2 mt-2 ">
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path fill-rule="evenodd" clip-rule="evenodd" d="M2 1C1.44772 1 1 1.44772 1 2C1 2.55228 1.44772 3 2 3H3.21922L6.78345 17.2569C5.73276 17.7236 5 18.7762 5 20C5 21.6569 6.34315 23 8 23C9.65685 23 11 21.6569 11 20C11 19.6494 10.9398 19.3128 10.8293 19H15.1707C15.0602 19.3128 15 19.6494 15 20C15 21.6569 16.3431 23 18 23C19.6569 23 21 21.6569 21 20C21 18.3431 19.6569 17 18 17H8.78078L8.28078 15H18C20.0642 15 21.3019 13.6959 21.9887 12.2559C22.6599 10.8487 22.8935 9.16692 22.975 7.94368C23.0884 6.24014 21.6803 5 20.1211 5H5.78078L5.15951 2.51493C4.93692 1.62459 4.13696 1 3.21922 1H2ZM18 13H7.78078L6.28078 7H20.1211C20.6742 7 21.0063 7.40675 20.9794 7.81078C20.9034 8.9522 20.6906 10.3318 20.1836 11.3949C19.6922 12.4251 19.0201 13 18 13ZM18 20.9938C17.4511 20.9938 17.0062 20.5489 17.0062 20C17.0062 19.4511 17.4511 19.0062 18 19.0062C18.5489 19.0062 18.9938 19.4511 18.9938 20C18.9938 20.5489 18.5489 20.9938 18 20.9938ZM7.00617 20C7.00617 20.5489 7.45112 20.9938 8 20.9938C8.54888 20.9938 8.99383 20.5489 8.99383 20C8.99383 19.4511 8.54888 19.0062 8 19.0062C7.45112 19.0062 7.00617 19.4511 7.00617 20Z" fill="{{ settings.custom_color }}"></path> </g></svg>
          <span id="cart-count" class="cart-count absolute -top-2 -right-2 bg-red-600 text-white text-xs rounded-full px-1">
            {{ cart.item_count }}
          </span>
        </a>


      </div>

      {% if settings.announcement_image != blank %}
        <img src="{{ settings.announcement_image | image_url: width: 300 }}" class=" hidden md:block md:order-3 rounded-xl w-1/4 h-9 border-search-brand ml-4"  alt="{{ shop.name }} "width="300" height="300" />
      {% else %}
          <span class="self-center text-2xl font-semibold whitespace-nowrap  hidden  md:block md:order-3">espacio para imagen</span>
      {% endif %}


      <div class="items-center justify-between  hidden w-full md:flex md:w-auto md:order-4" id="navbar-search">
        
        <ul class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white">
          
          {% for link in linklists.main-menu.links %}
            <li class="custom-css">
              {% if link.links != blank %}
                {%- assign dropdown_id = "dropdown-" | append: forloop.index -%}
                
                <button 
                  id="{{ dropdown_id }}-button" 
                  data-dropdown-toggle="{{ dropdown_id }}" 
                  class="color-text-brand focus:ring-0 focus:outline-none bg-red sm-mr-0 font-medium rounded-lg text-md px-3 text-center inline-flex items-center"
                  type="button">
                  {{ link.title }}
                  <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                  </svg>
                </button>

                <!-- Dropdown menu -->
                <div id="{{ dropdown_id }}" class="z-10 hidden  bg-white divide-y divide-gray-100 rounded-lg shadow-xl w-44 ">
                  <ul class="py-2 text-sm text-gray-700 " aria-labelledby="{{ dropdown_id }}-button">
                    {% for sublink in link.links %}
                      {% if sublink.links != blank %}
                        {%- assign sub_dropdown_id = dropdown_id | append: "-sub-" | append: forloop.index -%}
                        <li>
                          <button 
                            id="{{ sub_dropdown_id }}-button"
                            data-dropdown-toggle="{{ sub_dropdown_id }}"
                            data-dropdown-placement="right-start"
                            type="button"
                            class="flex items-center justify-between w-full px-4 py-2 hover:bg-red-200">
                            {{ sublink.title }}
                            <svg class="w-2.5 h-2.5 ms-3 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                            </svg>
                          </button>

                          <!-- Sub-dropdown -->
                          <div id="{{ sub_dropdown_id }}" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow-sm w-44">
                            <ul class="py-2 text-sm text-gray-700 " aria-labelledby="{{ sub_dropdown_id }}-button">
                              {% for subSublink in sublink.links %}
                                <li>
                                  <a href="{{ subSublink.url }}" class="block px-4 py-2 hover:bg-red-200">
                                    {{ subSublink.title }}
                                  </a>
                                </li>
                              {% endfor %}
                            </ul>
                          </div>
                        </li>
                        
                      {% else %}
                        <li>
                          <a href="{{ sublink.url }}" class="block px-4 py-2 hover:bg-red-200">
                            {{ sublink.title }}
                          </a>
                        </li>
                      {% endif %}
                    {% endfor %}
                  </ul>
                </div>
                
              {% else %}
                <a 
                  href="{{ link.url }}" 
                  class=" flex py-2 px-3 text-gray-900 text-center rounded-sm hover:bg-gray-100 md:hover:bg-transparent hover:text-[var(--brand-color)] md:p-0"
                  {% if link.current %}
                    aria-current="page"
                  {% endif %}
                >
                  {{ link.title }}
                </a>
              {% endif %}
            </li>
          {% endfor %}
          {% render 'shopping-cart' %}

        </ul>
      </div>

    </div>
    
  </nav>
  
</header>

<style>
  
  ul .custom-css:nth-of-type(7) {
    position: relative;
  }

  ul .custom-css:nth-of-type(7)::after {
    content: '';
    position: absolute;
    top: 0.1em;
    right: -0.8em;
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 9999px;
    background-color: var(--brand-color);
    opacity: 0.75;
    animation: ping 1s cubic-bezier(0, 0, 0.2, 1) infinite;
  }

  @keyframes ping {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    75%, 100% {
      transform: scale(2);
      opacity: 0;
    }
  }

  ul .custom-css:nth-of-type(8){
		background: #ff0;
		padding: 5px;
		border-radius: 10px;
		background-size: cover;
		background-position: center;
		box-shadow: 0 2px 10px #f0c000;
	}

</style>