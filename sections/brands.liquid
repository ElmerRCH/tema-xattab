<section class="bg-white py-8 antialiased dark:bg-gray-900 md:py-16 mt-5 rounded-md">
    <div class="max-w-screen-xl mx-auto px-4">
      {% if section.settings.section_heading != blank %}
        <h2 class="text-2xl font-semibold text-center mb-8 text-gray-900 dark:text-white">
          {{ section.settings.section_heading }}
        </h2>
      {% endif %}
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-8 text-gray-500 dark:text-gray-400">
        {% for block in section.blocks %}
          {% if block.settings.logo_image != blank %}
            <div class="flex items-center justify-center">
              <img
                height="0"
                width="0"
                src="{{ block.settings.logo_image | image_url: width: 200 }}"
                alt="{{ block.settings.logo_image.alt | escape }}"
                class="h-12 object-contain opacity-80 hover:opacity-100 transition duration-300"
              >
            </div>
          {% endif %}
        {% endfor %}
      </div>
  </div>
    
</section>


{% schema %}
{
  "name": "Banner Logos",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Título",
      "default": "Marcas"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo"
        }
      ],
      "limit": 7
    }
  ],
  "presets": [
    {
      "name": "Logo Slider"
    }
  ]
}
{% endschema %}



<style>
  .animate-float-in {
    animation: floatIn 1.2s ease forwards;
  }
  /* Animación de entrada flotante */
  @keyframes floatIn {
    0% {
      transform: translate(
        calc(-50vw + 100px),
        calc(-50vh + 100px)
      ) scale(0.3) rotate(20deg);
      opacity: 0;
    }
    100% {
      transform: translate(0, 0) scale(1) rotate(0deg);
      opacity: 1;
    }
  }
</style>