{% schema %}
{
  "name": "Recommended Products",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",

    },
    {
      "type": "number",
      "id": "limit",
      "label": "Number of products",
      "default": 8
    }
  ]
}
{% endschema %}

{% assign products = collections[section.settings.collection].products | slice: 0, section.settings.limit %}

{% render 'product-carousel', products: products %}
